                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="btnClick_0"
                    android:text="0"
                    android:background="@drawable/my_button_bg"
                    android:theme="@style/DefautNumberButton"
                    android:textSize="30sp" />

