<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="MathButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DefautNumberButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorDefaultText</item>
    </style>

    <style name="AccentButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Widget.Theme.ResolveurConvertisseur.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
